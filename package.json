{
  "name": "savr-action",
  "description": "GitHub Action that automatically drafts semantic GitHub Releases based on Conventional Commits.",
  "version": "0.0.0-development",
  "author": "Fabian Pahl",
  "type": "module",
  "packageManager": "pnpm@10.7.1",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "ncc build src/index.ts",
    "local-action": "local-action . src/main.ts .env",
    "prepare": "husky",
    "test": "vitest"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1",
    "handlebars": "4.7.8",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/types": "20.0.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.1",
    "@github/local-action": "6.0.2",
    "@octokit/rest": "22.0.1",
    "@types/semver": "7.7.1",
    "@vercel/ncc": "0.38.4",
    "eslint": "9.39.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prefer-arrow-functions": "3.9.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "package-changed": "3.0.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.4",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@octokit/request-error@>=1.0.0 <5.1.1": ">=5.1.1",
      "@octokit/request@>=1.0.0 <8.4.1": ">=8.4.1",
      "@octokit/plugin-paginate-rest@>=1.0.0 <9.2.2": ">=9.2.2"
    }
  }
}
